# Configuración para Docker - DESS
# IMPORTANTE: Este archivo es para desarrollo. En producción usar secretos de Docker/Kubernetes

# Django Core
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production-please
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,dess-app

# Base de Datos
# Para SQLite (desarrollo)
DATABASE_URL=sqlite:///app/db.sqlite3

# Para PostgreSQL (producción)
# DATABASE_URL=postgresql://dess_user:dess_password@postgres:5432/dess

# Redis
REDIS_URL=redis://redis:6379/0

# Superusuario por defecto
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin123
DJANGO_SUPERUSER_EMAIL=admin@dess.local

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/dess.log

# Configuración de despliegues
DOCKER_HOST=unix:///var/run/docker.sock
DEPLOYMENT_BASE_PORT=8100
DEPLOYMENT_MAX_PORT=8200

# Gunicorn (para producción)
GUNICORN_WORKERS=3
GUNICORN_WORKER_CLASS=sync
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=30
GUNICORN_LOG_LEVEL=info

# Configuración de seguridad (para producción)
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Configuración de archivos estáticos
STATIC_URL=/static/
STATIC_ROOT=/app/static
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Configuración de email (opcional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
