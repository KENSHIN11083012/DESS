# DESS - Ejemplo de configuración de variables de entorno
# Copiar este archivo como .env y completar con valores reales

# ============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================================================

# Tipo de base de datos: 'sqlite' o 'oracle'
DATABASE_ENGINE=sqlite

# Configuración Oracle (solo necesario si DATABASE_ENGINE=oracle)
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=XEPDB1
ORACLE_USER=dess_user
ORACLE_PASSWORD=tu_password_aqui

# ============================================================================
# CONFIGURACIÓN DE DJANGO
# ============================================================================

# Clave secreta de Django (generar una nueva para producción)
SECRET_KEY=dess-dev-secret-key-change-in-production

# Debug mode (True para desarrollo, False para producción)
DEBUG=True

# Hosts permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# CONFIGURACIÓN JWT
# ============================================================================

# JWT Secret Key (diferente a SECRET_KEY)
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# ============================================================================
# CONFIGURACIÓN DE APLICACIÓN
# ============================================================================

# Información de la aplicación
APP_NAME=DESS
APP_VERSION=1.0.0

# Nivel de logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
